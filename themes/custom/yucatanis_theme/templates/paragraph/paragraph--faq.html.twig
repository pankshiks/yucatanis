<section class="faq">
  <img class="faq-img" src="{{ file_url(content.field_faq_img.0['#item'].entity.uri.value) }}" alt="">
  <div class="container ptb-200">
    <div class="row faq-wrapper">
      <div class="col-12 title-with-detail">
        <h2 class="yellow-color">{{ paragraph.field_faq_heading.value }}</h2>
      </div>
       {{ paragraph.field_sub_headingg.value|raw }}
    </div>
    <div class="accordion faq-accordion" id="accordionExample">
      {% for key,item in paragraph.field_title_with_description %}

          {% if key == 0%}
           <div class="accordion-item">
        <h6 class="accordion-header" id="heading{{key}}">
          <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{key}}"
            aria-expanded="true" aria-controls="collapse{{key}}">
           {{item.entity.field_faq_title.value }}
            <div class="icon"></div>
          </button>
        </h6>
        <div id="collapse{{key}}" class="accordion-collapse collapse show" aria-labelledby="heading{{key}}"
          data-bs-parent="#accordionExample">
          
          <div class="accordion-body">
             {{item.entity.field_faq_description.value }}
          </div>
        </div>
      </div>
        {% else %}
      <div class="accordion-item">
        <h6 class="accordion-header" id="heading{{key}}">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#collapse{{key}}" aria-expanded="false" aria-controls="collapse{{key}}">
           {{item.entity.field_faq_title.value }}
            <div class="icon"></div>
          </button>
        </h6>
        <div id="collapse{{key}}" class="accordion-collapse collapse" aria-labelledby="heading{{key}}"
          data-bs-parent="#accordionExample">
          <div class="accordion-body">
            {{item.entity.field_faq_description.value }}
          </div>
        </div>
      </div>
      {% endif %}
      {% endfor %}
     
    </div>
  </div>
</section>








