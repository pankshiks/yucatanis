{% if paragraph.field_section_classs.value=='cta_banner' %}
 <section class="cta-banner">
  <img class="cta-banner-img" src="{{ file_url(content.field_image.0['#item'].entity.uri.value) }}" alt="{{paragraph.field_image.alt}}">   
  <div class="container ptb-200">
    <div class="cta-wrapper">
      <div class="xl-pb-40 small-title">
        {{ paragraph.field_slogan.value|raw}}
      </div>
      <div class="xl-pb-40">
        <h2 class="yellow-color">{{ paragraph.field_heading.value|raw}}</h2>
        <h3 class="white-color">{{paragraph.field_sub_heading.value|raw}}</h3>
      </div>
      <div class="xl-pb-40">
        {{paragraph.field_description.value|raw}}
      </div>

      {% for item in paragraph.field_button %}
      <a href="{{ item.url }}" class="btn btn-secondary">{{ item.title }}</a>
      {% endfor %}  
    </div>
  </div>
</section>

{% elseif paragraph.field_section_classs.value=='cta_text_bg_yellow' %}
 <section class="cta-text-button bg-yellow50">
  <div class="container ptb-50">
    <div class="cta-text-wrapper">
      <div class="left-cta-block">
        <h3>{{ paragraph.field_heading.value|raw}}</h3>
        {{paragraph.field_description.value|raw}}
      </div>
      <!-- <div> -->
      {% for item in paragraph.field_button %}
          <a href="{{ item.url }}" class="btn btn-secondary">{{ item.title }}</a>
        {% endfor %}  
      <!-- </div> -->
    </div>
  </div>
</section>


{% elseif paragraph.field_section_classs.value=='code_of_hiring' %}

<section class="code-of-hiring-block bg-dbrown ptb-200">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="img-with-text">
          <div class="left-block">
            {{ paragraph.field_heading.value|raw}}
            {{paragraph.field_sub_heading.value|raw}}
            {% for item in paragraph.field_button %}
              <div>
                <a href="{{ item.url }}" class="btn btn-secondary">{{ item.title }}</a>
              </div>
            {% endfor %}  
          </div>
          <div class="right-block">
            <div class="img-block-wrapper">
              <img  src="{{ file_url(content.field_image.0['#item'].entity.uri.value) }}" alt="{{paragraph.field_image.alt}}">  
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% else %}

<section class="bg-yellow call-us ptb-200">
  <div class="container">
    <div class="title-with-detail-wrapper justify-content-center">
      <div class="title-with-detail">
       {{ paragraph.field_heading.value|raw}}
        {{paragraph.field_sub_heading.value|raw}}
        {{paragraph.field_description.value|raw}}
      </div>
      <div class="d-flex justify-content-center">
        {% for item in paragraph.field_button %}
          <a href="{{ item.url }}" class="btn btn-secondary">{{ item.title }}</a>
        {% endfor %}    
      </div>
    </div>
  </div>
</section>
{%endif%}



